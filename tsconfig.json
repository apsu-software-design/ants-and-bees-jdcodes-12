{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "sourceMap": true,
        "outDir": "build/",
        "removeComments": true,
        "alwaysStrict": true
    },
    "typedocOptions": {
        "entryPoints": ["src/index.ts"],
        "out": "docs"
    },
    
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}